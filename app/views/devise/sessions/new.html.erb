<div class="auth__container">
  <h2 class="auth__heading">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="">
      <%= f.email_field :email, class:"auth__input", autofocus: true, autocomplete: "email", placeholder: "Enter your email" %>
    </div>

    <div class="">
      <%= f.password_field :password, class: "auth__input", autocomplete: "current-password", placeholder: "Enter your password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="">
      <%= f.submit "Log in", class:"auth__auth_button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>  
