  <%= helpers.turbo_frame_tag dom_id(@book) do %>
    <tr>
        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= @book.title %></td>
        <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= @book.author %></td>
        <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= @book.publication_year %></td>
        <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
          <%= link_to 'Edit', edit_path(@book), class: "mx-0 lg:mx-4 text-indigo-600 hover:text-indigo-900" %><span class="sr-only">, <%= @book.title %></span>
        </td>
    </tr>
  <% end %>