<table class="min-w-full divide-y divide-gray-300">
  <thead>
    <tr>
      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Name</th>
      <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 sm:table-cell">Title</th>
      
      <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
         <%= link_to 'Edit', @edit_path.call(@rows), class:"sr-only" %> 
      </th>
    </tr>
  </thead>
  <tbody class="divide-y divide-gray-200 bg-white">
    <%= render(TableBodyComponent.new(rows: @rows, edit_path: @edit_path)) %>
  </tbody>
</table>